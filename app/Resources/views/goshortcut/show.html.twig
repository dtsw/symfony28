{% extends 'base.html.twig' %}

{% block body %}
    <h1>Goshortcut</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ goShortcut.id }}</td>
            </tr>
            <tr>
                <th>Shortcut</th>
                <td>{{ goShortcut.shortcut }}</td>
            </tr>
            <tr>
                <th>Target</th>
                <td>{{ goShortcut.target }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ goShortcut.description }}</td>
            </tr>
            <tr>
                <th>Createdate</th>
                <td>{% if goShortcut.createDate %}{{ goShortcut.createDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if goShortcut.status %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Createuserid</th>
                <td>{{ goShortcut.createUserId }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ goShortcut.comments }}</td>
            </tr>
            <tr>
                <th>Accesscounter</th>
                <td>{{ goShortcut.accessCounter }}</td>
            </tr>
            <tr>
                <th>Lastaccessed</th>
                <td>{% if goShortcut.lastAccessed %}{{ goShortcut.lastAccessed|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('goshortcut_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('goshortcut_edit', { 'id': goShortcut.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
